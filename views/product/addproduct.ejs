<header> <%- include('../navbar') %></header>
<div class="w-[80%] mx-auto my-6 py-6">
    <form action="/product" method="POST" enctype="multipart/form-data">
        <input class="block w-full my-3 h-[40px] px-6 py-3 border-2" type="text" placeholder="Enter product  title" name="title">
        <input class="block w-full my-3 h-[40px] px-6 py-3 border-2" type="text" placeholder="Enter description" name="description">
        <div class="my-4">
            <span class="mx-4 text-blue-700">Select type of product </span>
            <select id='producttype' name='producttype' class="mx-6">
                <option value='electronics'>Electronics</option>
                <option value='sports'>Sports </option>
                <option value='outdoors'>outdoors</option>
                <option value='office'>Office</option>
            </select>
        </div>
        <!-- <input class="block w-full my-3 h-[40px] px-6 py-3 border-2" type="file" placeholder="add images" name="image"> -->
        <div class="my-4">
            <span class="mx-4 text-blue-700">Select Rating </span>
            <select id='rating' name='rating' class="mx-6">
                <option value='1'>1</option>
                <option value='2'>2</option>
                <option value='3'>3</option>
                <option value='4'>4</option>
                <option value='5'>5</option>
            </select>
        </div>
        <button class="bg-yellow-500 px-10 py-1 rounded " type="submit">ADD</button>
    </form>
</div>